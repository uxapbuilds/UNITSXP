<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TZConversionFragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cocogoosenonum"
            android:text="@string/tzHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTimeP1"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTimeP1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="00"
                    android:textSize="80sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center_vertical"
                android:text=":"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTimeP2"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTimeP2"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="00"
                    android:textSize="80sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <Spinner
                android:backgroundTint="@color/black"
                android:id="@+id/sprAM_PM"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:entries="@array/tzAM_PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:lines="1"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:hint="@string/actTimeZoneText"
                android:background="@color/white"
                android:fontFamily="@font/cocogoosenonum"
                android:id="@+id/actSearchMyTimeZone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10">
            </AutoCompleteTextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            app:cardElevation="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTimeZones"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>